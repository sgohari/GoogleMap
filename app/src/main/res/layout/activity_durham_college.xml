<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DurhamCollegeActivity">

    <TextView
        android:id="@+id/lbDurham"
        style="@style/heading_for_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/durham_heading" />

    <ListView
        android:id="@+id/DurhamListView"
        android:layout_width="wrap_content"
        android:layout_height="403dp"
        android:layout_below="@id/lbDurham" />

    <Button
        android:id="@+id/btnViewAllDurhamAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:text="@string/_address" />
</RelativeLayout>