<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenecaCollegeActivity">

    <TextView
        android:id="@+id/lbSeneca"
        style="@style/heading_for_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:text="@string/seneca_heading" />

    <ListView
        android:id="@+id/SenecaListView"
        android:layout_width="wrap_content"
        android:layout_height="419dp"
        android:layout_below="@id/lbSeneca" />

    <Button
        android:id="@+id/btnViewAllSenecaAddresses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/SenecaListView"
        android:text="@string/_address" />
</RelativeLayout>