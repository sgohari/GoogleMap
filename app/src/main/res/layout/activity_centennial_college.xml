<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CentennialCollegeActivity">

    <TextView
        android:id="@+id/lbCentennial"
        style="@style/heading_for_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/centennial_heading" />

    <ListView
        android:id="@+id/centCollegeListView"
        android:layout_width="wrap_content"
        android:layout_height="414dp"
        android:layout_below="@id/lbCentennial" />

    <Button
        android:id="@+id/btnViewAllCenAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:text="@string/_address"/>

</RelativeLayout>